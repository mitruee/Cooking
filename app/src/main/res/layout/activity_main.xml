<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="@string/kitchen_list"
        android:textColor="#960808"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />

    <Button
        android:id="@+id/buttonRussianKitchen"
        android:layout_width="371dp"
        android:layout_height="77dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#960808"
        android:text="@string/russian_kitchen"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonItalianKitchen"
        android:layout_width="371dp"
        android:layout_height="77dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#960808"
        android:text="@string/italian_kitchen"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRussianKitchen" />

    <Button
        android:id="@+id/buttonFrenchKitchen"
        android:layout_width="371dp"
        android:layout_height="77dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#960808"
        android:text="@string/french_kitchen"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonItalianKitchen" />

    <Button
        android:id="@+id/buttonTurkishKitchen"
        android:layout_width="371dp"
        android:layout_height="77dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#960808"
        android:text="@string/turkish_kitchen"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFrenchKitchen" />

    <Button
        android:id="@+id/buttonJapaneseKitchen"
        android:layout_width="371dp"
        android:layout_height="77dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#960808"
        android:text="@string/japanese_kitchen"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTurkishKitchen" />

    <Button
        android:id="@+id/buttonTaiKitchen"
        android:layout_width="371dp"
        android:layout_height="77dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#960808"
        android:text="@string/tai_kitchen"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonJapaneseKitchen" />

    <Button
        android:id="@+id/buttonIndianKitchen"
        android:layout_width="371dp"
        android:layout_height="77dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#960808"
        android:text="@string/indian_kitchen"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTaiKitchen" />
</androidx.constraintlayout.widget.ConstraintLayout>