    <style name="Base.Theme.Cooking.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Base.Theme.Cooking.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
